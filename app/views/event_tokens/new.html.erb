<% @page_title = "New Event Token" %>

<%= link_to("Back to list", event_tokens_path) %>

<div class="event-token new">
  <h2>Create Event Token</h2>

  <%= form_tag(create_event_token_path, :method => :post) do %>
    <table>
      <tr>
        <td><%= label_tag(:amount) %></td>
        <td><%= text_field_tag(:amount, params[:amount]=1) %></td>
      </tr>
      <tr>
        <td>&nbsp;</td>
        <td><%= submit_tag("Create") %></td>
      </tr>
    </table>
  <% end %>
</div>
