<%= link_to "Your schedule", student_schedule_path, :class => "link" %>
<%= link_to "Search schedule", student_search_schedule_path, :class => "link ml-2" %>

<!-- Buttons with days -->
<div id="schedule-buttons" class="col-container">
  <div class="header-column-5">
    <h4>Monday</h4>
  </div>
  <div class="header-column-5">
    <h4>Tuesday</h4>
  </div>
  <div class="header-column-5">
    <h4>Wednesday</h4>
  </div>
  <div class="header-column-5">
    <h4>Thursday</h4>
  </div>
  <div class="header-column-5">
    <h4>Friday</h4>
  </div>
</div>

<div id="schedule" class="col-container">
  <!-- Monday Schedule -->
  <div id="Monday" class="column-5">
    <% @schedule['monday'].each do |course| %>
      <div class="schedule-card" onmouseover="showDetails(event)">
        <span><%= course['start_time'] %> - <%= course['end_time'] %></span>
        <h5><%= course['name'] %></h5>
      </div>
    <% end %>
  </div>
  <!-- Tuesday Schedule -->
  <div id="Tuesday" class="column-5">
    <% @schedule['tuesday'].each do |course| %>
      <div class="schedule-card" onmouseover="showDetails(event)">
        <span><%= course['start_time'] %> - <%= course['end_time'] %></span>
        <h5><%= course['name'] %></h5>
      </div>
    <% end %>
  </div>
  <!-- Wednesday Schedule -->
  <div id="Wednesday" class="column-5">
    <% @schedule['wednesday'].each do |course| %>
      <div class="schedule-card" onmouseover="showDetails(event)">
        <span><%= course['start_time'] %> - <%= course['end_time'] %></span>
        <h5><%= course['name'] %></h5>
      </div>
    <% end %>
  </div>
  <!-- Thursday Schedule -->
  <div id="Thursday" class="column-5">
    <% @schedule['thursday'].each do |course| %>
      <div class="schedule-card" onmouseover="showDetails(event)">
        <span><%= course['start_time'] %> - <%= course['end_time'] %></span>
        <h5><%= course['name'] %></h5>
      </div>
    <% end %>
  </div>
  <!-- Friday Schedule -->
  <div id="Friday" class="column-5">
    <% @schedule['friday'].each do |course| %>
      <div class="schedule-card" onmouseover="showDetails(event)">
        <span><%= course['start_time'] %> - <%= course['end_time'] %></span>
        <h5><%= course['name'] %></h5>
      </div>
    <% end %>
  </div>
</div>
