<%= link_to "Your schedule", student_schedule_path, :class => "link" %>
<%= link_to "Search schedule", student_search_schedule_path, :class => "link ml-2" %>

<!-- Buttons with days -->
<div id="schedule-buttons" class="col-container">
  <div class="header-column-5">
    <h4>Monday</h4>
  </div>
  <div class="header-column-5">
    <h4>Tuesday</h4>
  </div>
  <div class="header-column-5">
    <h4>Wednesday</h4>
  </div>
  <div class="header-column-5">
    <h4>Thursday</h4>
  </div>
  <div class="header-column-5">
    <h4>Friday</h4>
  </div>
</div>

<div id="schedule" class="col-container">
  <!-- Monday Schedule -->
  <div id="Monday" class="column-5">
    <% @schedule['monday'].each do |course| %>
      <div class="schedule-card">
        <div class="schedule-card-inner">
          <div class="schedule-card-front">
            <span><%= course['start_time'] %> - <%= course['end_time'] %></span>
            <h5><%= course['name'] %></h5>
          </div>
          <div class="schedule-card-back">
            <span>Room: <%= course['room'] %></span>
            <p>Prof: <%= course['teacher_first_name'] + " " + course['teacher_last_name'] %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
