<%= link_to "Your schedule", student_schedule_path, :class => "link" %>
<%= link_to "Search schedule", student_search_schedule_path, :class => "link ml-2" %>

<div class="tab">
  <button type="button" class="btn btn-lg tablinks"  style="width:19.655%" onclick="openCity(event, 'Luni')">Luni</button>
  <button type="button" class="btn btn-lg tablinks"  style="width:19.655%" onclick="openCity(event, 'Marti')">Marti</button>
  <button type="button" class="btn btn-lg tablinks"  style="width:19.655%" onclick="openCity(event, 'Miercuri')">Miercuri</button>
  <button type="button" class="btn btn-lg tablinks"  style="width:19.655%" onclick="openCity(event, 'Joi')">Joi</button>
  <button type="button" class="btn btn-lg tablinks"  style="width:19.655%" onclick="openCity(event, 'Vineri')">Vineri</button>
</div>

<!-- Tab content -->
<div id="Luni" class="tabcontent">
  <div class="column">
    <% @schedule['monday'].each do |course| %>
      <h4 class="w3-tag w3-teal w3-round oneline" onmouseover="openDetails(event)"> <%= course['name']%>  <%= course['start_time'] %> - <%= course['end_time'] %>
      </h4>
    <% end %>
  </div>
  <div class="column">
    <div id="information">
      <% @schedule['monday'].each do |course| %>
        <%= content_tag :div, "", class: ["informatii" ,course['name'], course['start_time']]  do%>
          <p><h5>Locatia: </h5><%= course['room'] %>
          <p><h5>Prof: </h5><%= course['teacher_first_name'] + " " + course['teacher_last_name'] %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

